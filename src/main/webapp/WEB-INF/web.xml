<?xml version="1.0" encoding="UTF-8"?>

  <web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
         
         <servlet>
         <servlet-name>AddProduct</servlet-name>
         <servlet-class>grocery_system.AddproductServlet </servlet-class>
         </servlet>
         
         <servlet-mapping>
              <servlet-name>AddProduct</servlet-name>
              <url-pattern>/insert</url-pattern>
         </servlet-mapping>
         
         
         <servlet>
 	   <servlet-name>itemServlet</servlet-name>
 	    <servlet-class>grocery_system.productServlet</servlet-class>
 	
       </servlet>
 
      <servlet-mapping>
   	<servlet-name>itemServlet</servlet-name>
 	<url-pattern>/read</url-pattern>
     </servlet-mapping>
     
     <servlet>
         <servlet-name>User Login</servlet-name>
         <servlet-class>grocery_system.LoginServlet</servlet-class>
         </servlet>
         
         <servlet-mapping>
              <servlet-name>User Login</servlet-name>
              <url-pattern>/login</url-pattern>
         </servlet-mapping>
         
         
</web-app>
